<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.brugapp.brug">

    <uses-permission android:name="android.permission.CAMERA" /> <!-- For localisation service -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".BrugApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Brug">
        <activity
            android:name=".ui.TagFoundActivity"
            android:exported="false" />
        <activity
            android:name=".ui.HomeActivity"
            android:exported="false" />
        <!--
         Set custom default icon. This is used when no icon is set for incoming notification messages.
        See README(https://goo.gl/l4GJaQ) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/unlost_logo" />
        <!--
 Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <activity
            android:name=".ui.ReportItemActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.AddItemActivity"
            android:exported="false"
            android:parentActivityName=".ui.ItemsMenuActivity" />
        <activity
            android:name=".ui.ChatActivity"
            android:exported="false"
            android:label="Chat"
            android:parentActivityName=".ui.ChatMenuActivity" />
        <activity
            android:name=".ui.RegisterUserActivity"
            android:exported="false" />
<!--        <activity-->
<!--            android:name=".ui.SignInActivity"-->
<!--            android:exported="false" />-->
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false"
            android:parentActivityName=".ui.SignInActivity">

            <!-- support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.SignInActivity" />
        </activity>
        <activity
            android:name=".ui.QrCodeScannerActivity"
            android:exported="false"
            android:parentActivityName=".ui.SignInActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.SignInActivity" />
        </activity>
        <activity
            android:name=".ui.ItemsMenuActivity"
            android:exported="false"
            android:label="@string/item_activity_title">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ChatMenuActivity"
            android:exported="false"
            android:label="@string/chat_menu_label">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.ItemInformationActivity"
            android:exported="false"
            android:parentActivityName=".ui.ItemsMenuActivity" />

        <service
            android:name=".messaging.MyFCMMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.github.brugapp.brug.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
                <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/fileprovider" />
        </provider>
    </application>

</manifest>